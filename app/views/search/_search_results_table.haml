#search-results.row-fluid{ 'ng-controller' => 'PaginationController', 'ng-hide' => 'objects == undefined || objects.length == 0' }
  .span12

    = render 'pagination'

    %table.table.table-striped.table-bordered
      %thead
        %tr
          - @fields.each do |field|
            %th
              = field[:name]
      %tbody
        %tr{ 'ng-repeat' => 'obj in pagination.pageItems' }
          - @fields.each do |field|
            %td
              = "{{obj['#{field[:field]}']}}"